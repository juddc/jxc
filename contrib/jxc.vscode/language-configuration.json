{
    "comments": {
        "lineComment": "#"
    },
    "autoCloseBefore": ";:.,=}])> \n\t",
    "brackets": [
        [
            "[",
            "]"
        ],
        [
            "{",
            "}"
        ]
    ],
    "wordPattern": "[a-zA-Z_\\$][a-zA-Z0-9_\\$]*",
    "autoClosingPairs": [
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "[",
            "close": "]",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "{",
            "close": "}",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "(",
            "close": ")",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "<",
            "close": ">",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "\"",
            "\""
        ],
        [
            "'",
            "'"
        ],
        [
            "(",
            ")"
        ],
        [
            "[",
            "]"
        ],
        [
            "{",
            "}"
        ]
    ]
}
